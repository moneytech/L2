(function lambda (l r)
	(`(continuation lambda0 (,[lst (` cont0 $r) [@fst $l] $r])
		{$cont0 (,[@frst $l])})$r))

(function ; (l r)
	(`(with semicolon:return (,[lllst (` invoke $r) [@fst $l] (` semicolon:return $r) [@rst $l] $r]))$r))

(function : (l r)
	(`(with colon:return (,[lllst (` jump $r) [@fst $l] (` colon:return $r) [@rst $l] $r]))$r))
